<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    style="@style/AppBaseTheme"
    android:background="@drawable/answer_bg">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentTop="true"/>

    <ImageButton
            android:text="@string/newButton"
            android:id="@+id/mesh_20"
            style="@style/Button.blue"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/mesh_10"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="center"
            android:padding="0dp"/>

    <ImageButton
            style="@style/Button.blue"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/newButton"
            android:id="@+id/mesh_10"
            android:width="140dp"
            android:height="140dp"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/mesh_20"
            android:layout_alignLeft="@+id/mesh_00"
            />

    <ImageButton
            style="@style/Button.blue"
            android:id="@+id/mesh_00"
            android:layout_marginLeft="11dp"
            android:layout_above="@+id/mesh_10"
            android:layout_alignLeft="@+id/section_label"
            android:layout_marginBottom="20dp"
            android:layout_width="140dp"
            android:layout_height="140dp"/>

    <ImageButton
            style="@style/Button.blue"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/newButton"
            android:id="@+id/mesh_21"
            android:width="140dp"
            android:height="140dp"
            android:layout_alignLeft="@+id/mesh_11"
            android:layout_alignTop="@+id/mesh_20"
            android:layout_marginTop="5dp"/>

    <ImageButton
            style="@style/Button.blue"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/mesh_01"
            android:width="140dp"
            android:height="140dp"
            android:layout_marginRight="18dp"
            android:layout_alignTop="@+id/mesh_00"
            android:layout_alignRight="@+id/section_label"
            />

    <ImageButton
            style="@style/Button.blue"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/newButton"
            android:id="@+id/mesh_11"
            android:width="140dp"
            android:height="140dp"
            android:layout_alignTop="@+id/mesh_10"
            android:layout_alignLeft="@+id/mesh_01"/>

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignRight="@+id/mesh_21"
            android:layout_above="@+id/mesh_00"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gridLayout">

        <TextClock
                android:id="@+id/textClock"
                style="@style/clock"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="fill_parent"
                android:textSize="55sp"
                android:layout_marginTop="0dp"
                />

    </GridLayout>

</RelativeLayout>
