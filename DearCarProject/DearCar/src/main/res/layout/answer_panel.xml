<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/answer_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >

    <ImageView
            android:id="@+id/answer_panel"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/answer_panel"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/answer_panel_left"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/answer_panel_left"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/answer_panel_right"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/answer_panel_right"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/answer_panel_top"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/answer_panel_top"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/answer_panel_bottom"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/answer_panel_bottom"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"/>

    <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="213dp"
                android:layout_height="80dp"
                android:id="@+id/answer_bottom"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="-1dp"
                android:background="#00000000"
                android:layout_x="80dp"
                android:layout_y="215dp"/>

        <Button
                android:layout_width="90dp"
                android:layout_height="208dp"
                android:id="@+id/answer_left"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="27dp"
                android:background="#00000000"
                android:clickable="false"
                android:layout_x="40dp"
                android:layout_y="43dp"/>

        <Button
                android:layout_width="218dp"
                android:layout_height="74dp"
                android:id="@+id/answer_top"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="3dp"
                android:background="#00000000"
                android:layout_x="83dp"
                android:layout_y="4dp"/>

        <Button
                android:layout_width="79dp"
                android:layout_height="205dp"
                android:id="@+id/answer_right"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="4dp"
                android:background="#00000000"
                android:layout_marginRight="11dp"
                android:layout_x="258dp"
                android:layout_y="44dp"/>
    </AbsoluteLayout>

</RelativeLayout>